<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_item_pre_21"
    card_view:cardCornerRadius="@dimen/cardCornerRadius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageMeter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:src="@drawable/building" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="4dp"
                android:text="Data"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/testo_molto_piccolo"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tTitolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="TITOLO"
                android:textColor="@color/textTitolo"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tCoapPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="1dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="Autore"
                android:textColor="@color/textRed"
                android:textSize="@dimen/testo_piccolo" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>